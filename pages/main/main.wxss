/* pages/main/main.wxss */
page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #fef9e3;
}

.grid {
  padding: 4vh;
  overflow: hidden;
  flex: 1;
}
.item {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  width: 100%;
  /* height: 100px; */
}
.itemImgBg {
  border-radius: 16px;
  width: 100%;
  height: 0px;
  position: relative;
  padding-bottom: 100%;
  display: flex;
  justify-content: center;
  background-color: #c4e1c5;
}
.itemImg {
  width: 70%;
  height: 0px;
  margin-top: 15%;
  padding-bottom: 70%;
}
.itemTitle {
  color: black;
  margin-top: 1vh;
  font-family: 'pixel';
  /* font-size: 11px; */
}
