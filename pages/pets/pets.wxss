/* pages/pets/pets.wxss */
page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #fef9e3;
}
.scroll {
  padding: 4vh;
  overflow: hidden;
  flex: 1;
}
.grid {
  width: 100%;
  display: flex;
}
.item {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  background-color: white;
  border-radius: 16px;
  width: 100%;
  height: 0px;
  position: relative;
  padding-bottom: 150%;
  padding-top: 1vh;
  padding-left: 1vh;
  padding-right: 1vh;
}
.item-icon {
  width: 100%;
}
.item-title {
  color: black;
  text-align: center;
  margin-top: 20%;
}
.searchView {
  width: 100%;
  padding-left: 2vh;
  padding-top: 1vh;
  padding-right: 2vh;
  padding-bottom: 1vh;
}
.searchBg {
  width: 100%;
  border-radius: 90px;
  background-color: white;
  display: flex;
  align-items: center;
  padding: 5px;
}
.searchInput {
  flex: 1;
  margin-left: 1vh;
  margin-right: 1vh;
}
.searchIcon {
  width: 3vh;
  height: 3vh;
}
.popupBg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}
.popup {
  position: fixed;
  display: flex;
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
}
.popupContent {
  width: 80%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #222222;
  border-radius: 10px;
  border: .8px solid #EEE;
  flex-wrap: wrap;
  padding: 2vh;
}
.popupImg {
  width: 100%;
  height: 10vh;
}
.popupTitle {
  color: white;
}
.popupLine {
  background-color: white;
  width: 100%;
  height: 1px;
  margin-top: 2vh;
  margin-bottom: 2vh;
}
.popupDes {
  width: 100%;
  color: white;
}