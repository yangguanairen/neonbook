/* pages/suits/suits.wxss */
page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #454545;
}
.list {
  padding: 2vh;
  overflow: hidden;
  flex: 1;
  width: auto;
}
.listBg {
  border-style: solid;
  border-color: white;
  border-left-width: 2px;
  border-right-width: 2px;
  border-top-width: 1px;
  border-bottom-width: 1px;
}
.item {
  border-style: solid;
  border-color: white;
  border-left-width: 0px;
  border-right-width: 0px;
  border-top-width: 1px;
  border-bottom-width: 1px;
  display: flex;
  flex-wrap: wrap;
  padding: 4vh;
}
.titeView {
  width: 100%;
  display: flex;
  align-content: center;
  flex-wrap: nowrap;
}
.titleBg {
  flex: 1;
  display: flex;
  justify-content: flex-start;
  height: 100%;
  align-items: center;
}
.title {
  color: #35ff00;
  font-weight: bold;
  font-size: 18px;
}
.icon {
  /* right: 0px; */
  height: 40px;
}
.effect {
  color: white;
  margin-top: 2vh;
  font-size: 14px;
}
.propsView {
  display: flex;
  width: 100%;
  flex-wrap: wrap;
  margin-top: 2vh;
}
.propView {
  display: flex;
  justify-content: center;
  width: auto;
  flex-direction: column;
  padding: 1vh;
}
.propImg {
  height: 50px;
}
.propTitle {
  color: white;
  font-size: 12px;
  width: 100%;
  text-align: center;
}
.popupBg {
  z-index: 9999;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}
.popup {
  position: fixed;
  display: flex;
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
}
.popupContent {
  width: 80%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #222222;
  border-radius: 10px;
  border-style: solid;
  border-color: #EEE;
  border-width: 1px;
  flex-wrap: wrap;
  padding: 2vh;
}
.popupImg {
  width: 100%;
  height: 10vh;
}
.popupTitle {
  color: white;
}
.popupLine {
  background-color: white;
  width: 100%;
  height: 1px;
  margin-top: 2vh;
  margin-bottom: 2vh;
}
.popupDesTitle {
  width: 100%;
  color: white;
}
.popupEffict {
  width: 100%;
  color: #29fff0;
  margin-top: 2px;
}
.popupSuit {
  width: 100%;
  color: #35ff00;
  margin-top: 2px;
}